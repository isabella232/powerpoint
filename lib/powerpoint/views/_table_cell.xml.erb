<a:tc <%= gridspan ? " gridSpan=\"#{gridspan}\"" : '' %> <%= rowspan ? " rowSpan=\"#{rowspan}\"" : '' %> <%= h_merge ? ' hMerge="1"' : '' %> <%= v_merge ? ' vMerge="1"' : '' %> >
  <a:txBody>
    <a:bodyPr/>
    <a:lstStyle/>
    <a:p>
      <% unless h_merge || v_merge %>
        <a:r>
          <a:rPr lang="en-US" sz="1200" dirty="0" smtClean="0" />
          <a:t><%= encode_xml(data) %></a:t>
        </a:r>
      <% end %>
      <a:endParaRPr dirty="0" lang="en-US" />
    </a:p>
  </a:txBody>
  <% if color %>
    <a:tcPr>
      <a:solidFill>
        <a:srgbClr val="<%= color %>"/>
      </a:solidFill>
    </a:tcPr>
  <% else %>
    <a:tcPr/>
  <% end %>
</a:tc>
